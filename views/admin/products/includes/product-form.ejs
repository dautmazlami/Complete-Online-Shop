<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <p>
        <label for="title">Title</label>
        <input type="text" id="title" name="title"  <%= product.title %> required>
    </p>
    <div id="image-upload-control">
      <p>
        <label for="image">Image</label>
        <input type="file" id="image" name="image" accept="image/png,image/jpg,image/jpeg" <% if (imageRequired) { %>required<% } %> >
    </p>
    <img src="" alt="selected image.">   
    </div>
   
    <p>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" <%= product.summary %> required maxlength="250">
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" id="price" name="price"  <%= product.price %> min="0.01" step="0.01">
    </p>
    <p>
       <label for="description">Description</label>
        <textarea name="description" id="description" rows="7" required><%= product.description %></textarea> 
    </p>
    <p>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button class="btn">Save</button>
    </p>   
</form>